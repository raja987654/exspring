pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage('Clean up') {
            steps {
                deleteDir()
            }
        }
        stage('Clone repo') {
            steps {
                bat 'git clone https://github.com/raja987654/exspring.git'
            }
        }
        stage('Generate Backend image') {
            steps {
                dir('exspring') { // Ensure the directory matches the cloned repo
                    bat 'mvn clean install'
                    bat 'docker build -t docex1-spring .'
                }
            }
        }
        stage('Run Docker Compose') {
            steps {
                dir('exspring') { // Again, ensure the directory matches
                    bat 'docker-compose up -d'
                }
            }
        }
    }
}
